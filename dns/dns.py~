import string

re_empty = re.compile("^\s*;*\s*$")
re_comment = re.compile("^\s*;+\s*(\S+.*)$")
re_reverse = re.compile("^\s*(\d{1-3})\s+IN\s+PTR\s+([A-Za-z0-9.-]+)\s*$")

def parse_dns(f):
