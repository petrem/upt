        pass

def parse_reverse(f):
    group = False
    for line in f:
        if re.empty(line):
            group = False
            continue
        if match = re_comment(line):
            comment = match.group(1)
            group = True
            continue
        if match = re_reverse(line):
            hostnumber = match.group(1)
            fqdn = match.group(2)
            ips

